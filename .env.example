# =============================================================================
# LuciaERP - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# For Docker Compose local development:
DATABASE_URL="postgresql://lucia:lucia_dev_password@localhost:5432/lucia_dev?schema=public"

# For production (example):
# DATABASE_URL="postgresql://user:password@host:5432/lucia_prod?schema=public&sslmode=require"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-minimum-32-chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# Redis (optional, for sessions/cache)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# -----------------------------------------------------------------------------
# MFA / TOTP
# -----------------------------------------------------------------------------
MFA_ISSUER="LuciaERP"

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# -----------------------------------------------------------------------------
# Email (SMTP) - Future use
# -----------------------------------------------------------------------------
EMAIL_FROM="noreply@luciaerp.com"
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

# -----------------------------------------------------------------------------
# Veri*Factu (AEAT) - Future use
# -----------------------------------------------------------------------------
VERIFACTU_ENABLED=false
AEAT_ENDPOINT=""
AEAT_CERTIFICATE_PATH=""

# -----------------------------------------------------------------------------
# AWS (Production) - Future use
# -----------------------------------------------------------------------------
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="debug"
